  "scripts": {
    "lint:fix": "prettier */*.js \"*/**/*{.js,.ts}\" -w",
    "lint": "prettier */*.js \"*/**/*{.js,.ts}\" --check",
    "prepare": "husky"
  },
  "lint-staged": {
    "app/src/**/*.{ts,tsx}": [
      "npm run lint --prefix app",
      "npm run build --prefix app"
    ],
    "mcp-server/**/*.{js,mjs}": [
      "node -e \"import('./mcp-server/index.mjs').then(() => console.log('OK'))\""
    ],
    "cli/**/*.{js,mjs}": [
      "node cli/index.mjs --help"
    ]
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "chai": "^4.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mocha": "^9.0.3",
    "prettier": "^2.6.2",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.7.3"
  }
}
